<html>
    <head>
        <title>
            <%= title %>
            <!-- locals.title can also be used here as locals is a global object -->
        </title>
        <link rel="stylesheet" href="/css/home.css">
        <script src="https://kit.fontawesome.com/f8f447d289.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <h1 id="page-heading"><i class="fa-solid fa-address-book"></i>My Contacts List</h1>

        <div>
            <ul>
                <% for(let i of contact_list){ %>
                <li>
                    <div class="details">
                    <p><%= i.name %></p>
                    <p><%= i.phone %></p>
                    </div>
                    <div class="delete-button">
                        <!-- <a href="/delete-contact/<%= i.phone %>"> -->
                            <a href="/delete-contact/<%= i._id %>">
                            <i class="fas fa-window-close"></i>
                        </a>
                    </div>
                </li>
                <% } %>
                
            </ul>
        </div>

        <form id="new-contact-form" action="/create-contact" method="post">
            <input type="text" name="name" placeholder="Enter the Name">
            <input type="number" name="phone" placeholder="Enter the Phone">

            <button type="submit">Add Contact</button>
        </form>

        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>